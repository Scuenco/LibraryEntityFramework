@model LibraryEntity.Model.Book
@{
    ViewBag.Title = "EditBook";
}

<h2>Edit Book</h2>
<form method="post" >
    @Html.LabelFor(x => x.Title) <br />
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" }) <br />
    @Html.LabelFor(x => x.Author) <br />
    @Html.TextBoxFor(x => x.Author) <br />
    @Html.LabelFor(x => x.Genre) <br />
    @Html.TextBoxFor(x => x.Genre) <br />
    @Html.HiddenFor(x => x.BookID) <br />
   <button type="submit" class="btn btn-default">Submit</button>
</form>
